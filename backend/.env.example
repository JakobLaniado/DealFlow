# ===========================================
# BACKEND SERVER ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# SERVER CONFIGURATION
# -------------------------------------------
PORT=3000
BASE_URL=http://localhost:3000

# -------------------------------------------
# SUPABASE CONFIGURATION
# -------------------------------------------
# Get these from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_public_key
SUPABASE_SECRET_KEY=your_supabase_service_role_key

# -------------------------------------------
# DATABASE CONNECTION
# -------------------------------------------
# Get from: Supabase Dashboard > Project Settings > Database > Connection string
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# -------------------------------------------
# ZOOM SDK CREDENTIALS
# -------------------------------------------
# Get these from: Zoom Marketplace > Build App > Meeting SDK
# Used for generating JWT tokens for mobile SDK initialization
ZOOM_SDK_CLIENT_ID=your_zoom_sdk_client_id
ZOOM_SDK_CLIENT_SECRET=your_zoom_sdk_client_secret
ZOOM_SDK_TOKEN=your_zoom_sdk_token

# -------------------------------------------
# ZOOM SERVER-TO-SERVER OAUTH
# -------------------------------------------
# Get these from: Zoom Marketplace > Build App > Server-to-Server OAuth
# Used for creating meetings via Zoom API
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_S2S_CLIENT_ID=your_zoom_s2s_client_id
ZOOM_S2S_CLIENT_SECRET=your_zoom_s2s_client_secret

# The email of the Zoom account that will host all meetings
ZOOM_HOST_EMAIL=your-zoom-account@email.com

# Webhook secret for validating Zoom webhook events (optional)
ZOOM_WEBHOOK_SECRET_TOKEN=your_zoom_webhook_secret_token

# -------------------------------------------
# SENDGRID EMAIL CONFIGURATION
# -------------------------------------------
# Get from: SendGrid Dashboard > Settings > API Keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Must be a verified sender in SendGrid
SENDGRID_FROM_EMAIL=your-verified-sender@email.com

# -------------------------------------------
# CONTRACT CONFIGURATION
# -------------------------------------------
# Google Doc URL for the contract template
CONTRACT_URL=https://docs.google.com/document/d/your-document-id/edit

# -------------------------------------------
# FIREBASE CLOUD MESSAGING (FCM)
# -------------------------------------------
# Get from: Firebase Console > Project Settings > Cloud Messaging > Server key
FIREBASE_FCM_KEY=your_firebase_fcm_server_key
